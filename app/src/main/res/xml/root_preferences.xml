<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/messages_header">

        <EditTextPreference
            android:key="signature"
            android:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_defaultCity"
            android:title="Paramétrer une ville par défaut" />
        <EditTextPreference
            android:key="edit_text_defaultCity"
            android:title="Ville par defaut"
            app:dependency="switch_defaultCity"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/sync_header">

        <SwitchPreferenceCompat
            android:key="sync"
            android:title="@string/sync_title" />

        <EditTextPreference
            android:key="horaire"
            android:title="Horaire"
            app:dependency="sync"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>